#version 430

layout(location=1) uniform vec3 fontcolor;

layout(binding=0) uniform sampler2DRect texture0;

in vec2 tex_coord;
flat in vec4 texscalebias;

out vec4 color;

void main()
{
  vec2 texcoord_final = tex_coord * texscalebias.xy + texscalebias.zw;
  color = vec4( fontcolor, texture(texture0, texcoord_final).x );
}